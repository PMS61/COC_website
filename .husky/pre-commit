#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run type checking
echo "📝 Checking TypeScript types..."
npm run type-check || exit 1

# Run linting
echo "🧹 Linting code..."
npm run lint || exit 1

# Run build
echo "🏗️ Building project..."
npm run build || exit 1

echo "✅ All pre-commit checks passed!"